{
  "name": "signal0ne",
  "displayName": "Signal0ne",
  "description": "AI debugging assistant",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "signal0ne.login",
        "title": "Add code as context"
      },
      {
        "command": "signal0ne.issueFocus",
        "title": "Focus issue"
      },
      {
        "command": "signal0ne.fixCode",
        "title": "Fix code"
      },
      {
        "command": "signal0ne.logout",
        "title": "Add code as context"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "signal0ne",
          "title": "Signal0ne",
          "icon": "resources/signal_img_logo.svg"
        }
      ]
    },
    "views": {
      "signal0ne": [
        {
          "id": "signal0ne",
          "name": "Signal0ne",
          "type": "tree",
          "icon": "resources/signal_img_logo.svg"
        },
        {
          "id": "signal0neIssue",
          "name": "Issues",
          "type": "tree",
          "icon": "resources/signal_img_logo.svg"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "signal0ne.issueFocus",
          "group": "inline",
          "when": "view == signal0neIssue"
        }
      ],
      "editor/context": [
        {
          "command": "signal0ne.fixCode",
          "group": "inline"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "signal0ne",
        "contents": "In order to use Signal0ne, you need to sign in."
      }
    ]
  },
  "scripts": {
    "start:ui": "cd ui && npm run start",
    "build:ui": "cd ui && npm run build",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/uuid": "^9.0.8",
    "axios": "^1.6.8",
    "get-port": "^7.1.0",
    "get-port-please": "^3.1.2",
    "jwt-decode": "^4.0.0",
    "server-destroy": "^1.0.1",
    "uuid": "^9.0.1"
  }
}
